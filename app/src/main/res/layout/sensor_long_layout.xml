<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sensor_name_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:id="@+id/sensor_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_sensor_name"
            android:theme="@style/Font"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/sensor_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="2dp"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensor_id_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/sensor_name_row"
        android:padding="10dp">

        <TextView
            android:id="@+id/sensor_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_sensor_id"
            android:theme="@style/Font"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/sensor_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="2dp"
            >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensor_latitude_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/sensor_id_row"
        android:padding="10dp">

        <TextView
            android:id="@+id/sensor_latitude_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_sensor_latitude"
            android:theme="@style/Font"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/sensor_latitude"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="2dp"
            >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensor_longitude_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/sensor_latitude_row"
        android:padding="10dp">

        <TextView
            android:id="@+id/sensor_longitude_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_sensor_longitude"
            android:theme="@style/Font"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/sensor_longitude"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="2dp"
            >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensor_depth_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/sensor_longitude_row"
        android:padding="10dp">

        <TextView
            android:id="@+id/sensor_depth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_sensor_depth"
            android:theme="@style/Font"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/sensor_depth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="2dp"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensor_frequency_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sensor_depth_row"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/sensor_frequency_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_sensor_frequency"
            android:theme="@style/Font"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/sensor_frequency"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="2dp"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensor_datanb_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sensor_frequency_row"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/sensor_datanb_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_nb"
            android:theme="@style/Font"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/sensor_datanb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="2dp"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensor_last_collect_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sensor_datanb_row"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/sensor_last_collect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_sampling"
            android:theme="@style/Font"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/sensor_last_collect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="2dp"
            >
        </TextView>
    </LinearLayout>



</RelativeLayout>