<?xml version="1.0" encoding="utf-8"?>
<ch.livelo.livelo2.MySensors.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckedTextView
        android:id="@+id/mysensor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:padding="10dp"
        android:theme="@style/Font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mysensor_name">

        <TextView
            android:id="@+id/myposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            />
    </LinearLayout>



</ch.livelo.livelo2.MySensors.CheckableLinearLayout>